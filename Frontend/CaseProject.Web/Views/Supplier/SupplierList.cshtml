@using CaseProject.DtoLayer.Dtos.Supplier
@model List<ResultSupplierDto>
@{
    ViewData["Title"] = "SupplierList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="container">
    <h2 style="color: #007bff; font-family: 'Arial', sans-serif; font-weight: bold; margin-bottom: 20px;">Tedarikçi Listesi</h2>

    <a href="/Supplier/CreateSupplier" class="add-button" style="background-color: #007bff; color: #fff; font-family: 'Arial', sans-serif; font-weight: bold; text-decoration: none; border-radius: 5px; padding: 10px 20px; margin-bottom: 20px; display: inline-block;">Yeni Tedarikçi Ekle</a>

    <table class="table">
        <thead style="background-color: #007bff; color: white; font-family: 'Arial', sans-serif; font-weight: bold;">
            <tr>
                <th>Supplier ID</th>
                <th>Name</th>
                <th>Association No</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SupplierId</td>
                    <td>@item.SupplierName</td>
                    <td>@item.AssociationNo</td>
                    <td>
                        <a href="/Supplier/UpdateSupplier/@item.SupplierId" class="btn btn-warning">Güncelle</a>
                        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal_@item.SupplierId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@foreach (var item in Model)
{
    <div class="modal fade" id="deleteModal_@item.SupplierId" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel_@item.SupplierId" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel_@item.SupplierId">Tedarikçiyi Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bu tedarikçiyi silmek istediğinizden emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <a href="/Supplier/DeleteSupplier/@item.SupplierId" class="btn btn-danger">Sil</a>
                </div>
            </div>
        </div>
    </div>
}

<style>
    body {
        background-color: #f8f9fa;
        color: #343a40;
        margin: 0;
        padding: 0;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 12px;
    }

    .add-button {
        display: inline-block;
    }

    .btn {
        border-radius: 5px;
        padding: 8px 16px;
        font-size: 14px;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        margin-right: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }
</style>
