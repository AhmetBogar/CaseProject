@using CaseProject.DtoLayer.Dtos.Order
@model List<ResultOrderDto>

<div id="orderFilter">
    <form id="filterForm">
        <label for="searchText">Ara:</label>
        <input type="text" id="searchText" name="searchText">
        <button type="submit">Ara</button>
    </form>
</div>

<div id="orderList">
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>OBJKEY</th>
                <th>Created Date</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Supplier ID</th>
                <th>Supplier Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OBJKEY</td>
                    <td>@order.CreatedDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.CustomerId</td>
                    <td>@order.CustomerName</td>
                    <td>@order.SupplierId</td>
                    <td>@order.SupplierName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            // Form gönderildiğinde AJAX isteği yapmak
            $('#filterForm').submit(function (event) {
                event.preventDefault(); // Sayfa yenilemesini engelle

                var searchText = $('#searchText').val();

                $.ajax({
                    url: '@Url.Action("OrderList", "Order")',
                    type: 'GET',
                    data: { searchText: searchText },
                    success: function (data) {
                        $('#orderList').html(data);
                    },
                    error: function () {
                        $('#orderList').html('<p>Bir hata oluştu, siparişler yüklenemedi.</p>');
                    }
                });
            });

            // Sayfa yüklendiğinde tüm siparişleri yükle
            $('#filterForm').submit();
        });
    </script>
}
